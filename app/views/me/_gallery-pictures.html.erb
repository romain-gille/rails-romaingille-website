<div class="container gallery-images", data-gallery-target="images">
  <% images["allpic"].each do |img| %>
    <div class="img-container", style= "width: <%= img['width'].to_f*10 /img['height'] %>rem; flex-grow: <%= img['width'].to_f*10 /img['height']%>; max-width: <%= img['width'].to_f*30 /img['height'] %>rem">
      <div style= "height: <%=(img['height'].to_f/img['width'])*100%>%">
        <%= image_tag(img["sourcesmall"], :alt => "img Philippines", style: "width: 100%") %></div>
    </div>
  <% end %>
  <% (1..3).each do  %>
    <div class="img-container">
      <div style= "height: 0px">
      </div>
    </div>
  <% end %>
</div>
